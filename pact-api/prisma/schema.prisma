generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
}

enum TaskType {
  PERSONAL
  PRIVATE
  SHARED
}

enum FriendshipStatus {
  PENDING
  ACCEPTED
  BLOCKED
}

enum Role {
  ADMIN
  EDITOR
  VIEWER
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  username  String
  password  String?      // nullable
  googleId  String?      @unique
  createdAt DateTime @default(now())
}
