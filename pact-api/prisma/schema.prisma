generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
}

enum TaskType {
  PERSONAL
  PRIVATE
  SHARED
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

model Task {
  id          String        @id @default(uuid())
  title       String
  description String?
  completed   Boolean       @default(false)
  priority    TaskPriority  @default(MEDIUM)
  deadline    DateTime?
  type        TaskType
  ownerId     String
  createdAt   DateTime      @default(now())

  owner User @relation(fields: [ownerId], references: [id])
}

enum FriendshipStatus {
  PENDING
  ACCEPTED
  BLOCKED
}

enum Role {
  ADMIN
  EDITOR
  VIEWER
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  username  String
  password  String?      // nullable
  googleId  String?      @unique
  createdAt DateTime @default(now())
  
  sentRequests     Friendship[] @relation("RequestSent")
  receivedRequests Friendship[] @relation("RequestReceived")

  tasks Task[]
}

model Friendship {
  id          String           @id @default(uuid())
  requesterId String
  receiverId  String
  status      FriendshipStatus @default(PENDING)
  createdAt   DateTime         @default(now())

  requester User @relation("RequestSent", fields: [requesterId], references: [id])
  receiver  User @relation("RequestReceived", fields: [receiverId], references: [id])

  @@unique([requesterId, receiverId])
}
