generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
}

enum TaskType {
  PERSONAL
  PRIVATE
  SHARED
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

model Task {
  id          String        @id @default(uuid())
  title       String
  description String?
  completed   Boolean       @default(false)
  priority    TaskPriority  @default(MEDIUM)
  deadline    DateTime?
  type        TaskType
  ownerId     String
  assigneeId  String?
  groupId     String?
  createdAt   DateTime      @default(now())

  owner    User   @relation("OwnedTasks", fields: [ownerId], references: [id])
  assignee User?  @relation("AssignedTasks", fields: [assigneeId], references: [id])
  group    Group? @relation(fields: [groupId], references: [id])
}

enum FriendshipStatus {
  PENDING
  ACCEPTED
  BLOCKED
}

enum Role {
  ADMIN
  EDITOR
  VIEWER
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  username  String
  password  String?
  googleId  String?  @unique
  createdAt DateTime @default(now())

  tasksAssigned Task[] @relation("AssignedTasks")
  tasksOwned    Task[] @relation("OwnedTasks")

  sentRequests     Friendship[] @relation("RequestSent")
  receivedRequests Friendship[] @relation("RequestReceived")

  groupMemberships GroupMember[]
}

model Friendship {
  id          String           @id @default(uuid())
  requesterId String
  receiverId  String
  status      FriendshipStatus @default(PENDING)
  createdAt   DateTime         @default(now())

  requester User @relation("RequestSent", fields: [requesterId], references: [id])
  receiver  User @relation("RequestReceived", fields: [receiverId], references: [id])

  @@unique([requesterId, receiverId])
}

model Group {
  id        String        @id @default(uuid())
  name      String
  createdAt DateTime      @default(now())

  members GroupMember[]
  tasks   Task[]
}

model GroupMember {
  id      String @id @default(uuid())
  userId  String
  groupId String
  role    Role

  user  User  @relation(fields: [userId], references: [id])
  group Group @relation(fields: [groupId], references: [id])

  @@unique([userId, groupId])
}
